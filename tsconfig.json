{
 "compilerOptions": {
 "target": "ES2020",
 "module": "CommonJS",
 "moduleResolution": "Node",
 "outDir": "dist",
 "rootDir": "./",
 "strict": true,
 "esModuleInterop": true,
 "skipLibCheck": true,
 "forceConsistentCasingInFileNames": true,
 "typeRoots": ["./types", "./node_modules/@types"]
 },
 "include": [
 "files/src/**/*",
 "types/**/*"
 ],
 "exclude": [
 "files/src/renderer/**/*",
 "node_modules",
 "dist"
 ]
}
